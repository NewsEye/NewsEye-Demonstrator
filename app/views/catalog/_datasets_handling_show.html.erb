<div>
  <p><%= link_to "Create a dataset", "/datasets/new" %> to add documents to.</p>
</div>
<div>
  <form autocomplete="off" novalidate="novalidate" data-remote="true" action="/catalog/set_working_dataset" accept-charset="UTF-8" method="post" class="form-inline">
    <label for="dataset[id]">Working dataset:</label>
    <select id="working_dataset_select" name="dataset[id]" class="form-control form-control-sm">
      <%= session[:working_dataset] ||= current_user.datasets.first.id %>
      <%= options_for_select(current_user.datasets.map{|d| ["#{d.title} (#{d.documents.size} docs)", d.id]}, session[:working_dataset]) %>
    </select>
  </form>
</div>
<hr/>

<h4>Issue</h4>
<div id="issue_in_datasets_list"></div>
<div>
  <form autocomplete="off" novalidate="novalidate" data-remote="false" action="/catalog/modify_doc_relevancy" accept-charset="UTF-8" method="post" class="form-inline">
    <label for="specific_dataset_relevancy">Set relevancy towards <span class="working_dataset_span"><%= Dataset.find(session['working_dataset']).title %></span>: </label>
    <select name="specific_dataset_relevancy" class="form-control form-control-sm">
      <%= options_for_select [["Delete", -1],["Not relevant", 0],["Somewhat relevant",1],["Relevant",2],["Very relevant",3]] %>
    </select>
    <input type="hidden" name="doc_id" value="<%= @document.id %>"/>
    <input type="hidden" name="current_url" value="<%= request.original_url %>"/>
    <button class="specific_apply_relevancy btn btn-default" type="submit" href="#" data-disable-with="Working...">
      Apply
    </button>
  </form>
</div>

<div id="article_dataset_panel">
  <hr/>
  <h4>Selected Article</h4>
  <div id="article_in_datasets_list"></div>
  <div>
    <form autocomplete="off" novalidate="novalidate" data-remote="false" action="/catalog/modify_doc_relevancy" accept-charset="UTF-8" method="post" class="form-inline">
      <label for="specific_dataset_relevancy">Set relevancy towards <span class="working_dataset_span"><%= Dataset.find(session['working_dataset']).title %></span>: </label>
      <select name="specific_dataset_relevancy" class="form-control form-control-sm">
        <%= options_for_select [["Delete", -1],["Not relevant", 0],["Somewhat relevant",1],["Relevant",2],["Very relevant",3]] %>
      </select>
      <input type="hidden" name="doc_id" value="<%= @document.id %>"/>
      <input type="hidden" name="current_url" value="<%= request.original_url %>"/>
      <button class="specific_apply_relevancy btn btn-default" type="submit" href="#" data-disable-with="Working...">
        Apply
      </button>
    </form>
  </div>
</div>
