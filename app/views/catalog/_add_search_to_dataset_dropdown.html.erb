<div class="clearfix constraints-container" style="padding: 4px 7px;">
  <div class="col-md-6">
    <p style="display: inline;">Add this search to a new dataset: </p>
    <form novalidate="novalidate" data-remote="true" action="/datasets/create_and_add" accept-charset="UTF-8" method="post" class="form-inline" style="display: inline;">
      <%= csrf_meta_tags %>
      <input class="form-control form-control-sm" type="text" name="dataset[title]" placeholder="Dataset title">
      <input type="hidden" name="dataset[search]" value="<%= request.original_url %>">
      <input type="hidden" name="dataset[user_id]" value="<%= current_user.id %>">
      <button type="submit" class="btn btn-primary btn-sm">Create and Add</button>
    </form>
  </div>
  <div class="col-md-6">
    <p style="display: inline;">Add this search to an existing dataset: </p>
    <form novalidate="novalidate" data-remote="true" action="/datasets/add" accept-charset="UTF-8" method="post" class="form-inline" style="display: inline;">
      <%= csrf_meta_tags %>
      <select name="dataset[id]" class="form-control form-control-sm">
      <option value="" disabled selected>Select your dataset</option>
      <%= options_for_select(@current_user.datasets.map{|d| [d.title, d.id]}) %>
      </select>
      <input type="hidden" name="dataset[search]" value="<%= request.original_url %>">
      <button type="submit" class="btn btn-primary btn-sm">Add</button>
    </form>
  </div>
</div>