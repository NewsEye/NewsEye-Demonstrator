<%= render 'previous_next_doc' %>

<% @page_title = t('blacklight.search.show.title', :document_title => document_show_html_title, :application_name => application_name).html_safe %>
<% content_for(:head) { render_link_rel_alternates } %>




<!--<div class="row">-->
  <div class="col-sm-5">
    <b>
      <%= ERB::Util.html_escape(@document[:title_ssi]).gsub("\n","<br>").html_safe %>
    </b>
    <p>
      <%= ERB::Util.html_escape(@document[:all_text_tde_siv]).gsub("\n","<br>").html_safe %>
      <%= ERB::Util.html_escape(@document[:all_text_tfr_siv]).gsub("\n","<br>").html_safe %>
      <%= ERB::Util.html_escape(@document[:all_text_tfi_siv]).gsub("\n","<br>").html_safe %>
      <%= ERB::Util.html_escape(@document[:all_text_tse_siv]).gsub("\n","<br>").html_safe %>
      <%= ERB::Util.html_escape(@document[:all_text_ten_siv]).gsub("\n","<br>").html_safe %>
    </p>

  </div>
  <div class="col-sm-7">
    <div>
      <% manifest = get_manifest @document[:from_issue_ssi]%>
      <% @document[:canvases_parts_ssm].each do |canvas| %>
        <img src="<%= get_iiif_images_from_canvas_path manifest, canvas %>" style="max-width: 100%;">
      <% end %>
    </div>
  </div>
<!--</div>-->

<% if @document.respond_to?(:export_as_openurl_ctx_kev) %>
  <!--
       // COinS, for Zotero among others.
       // This document_partial_name(@document) business is not quite right,
       // but has been there for a while.
  -->
  <span class="Z3988" title="<%= @document.export_as_openurl_ctx_kev(document_partial_name(@document)) %>"></span>
<% end %>
