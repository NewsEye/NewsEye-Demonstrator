<div class="panel panel-default">
  <div class="panel-heading">Datasets</div>
  <div class="panel-body flex-grow">
    <table class="table">
      <tbody>
      <% current_user.dataset_ids.each do |dataset_id| %>
        <% dataset = Dataset.find(dataset_id) %>
        <tr>
          <td><%= link_to dataset.title, dataset %></td>
          <td><%= dataset.nb_issues %> issues and <%= dataset.nb_articles %> articles</td>
          <td>
            <%= link_to "Describe", "/personal_workspace/describe_dataset/#{dataset.id}", remote: true %>
          </td>
<!--          <td>-->
            <%#= link_to "/personal_workspace/explore_dataset/#{dataset.id}", method: :delete, data: { confirm: 'Are you sure?' }, remote: true do %>
<!--              <span class="glyphicon glyphicon-search" style="color: black"></span>-->
            <%# end %>
<!--          </td>-->
          <td>
            <%= link_to "TM", "/topic_models/query_modal/#{dataset.id}", remote: true%>
          </td>
          <td>
            <%= link_to dataset, method: :delete, data: { confirm: 'Are you sure ? All associated tasks will also be deleted.' } do %>
              <span class="glyphicon glyphicon-remove" style="color: red"></span>
            <% end %>
          </td>
        </tr>
      <% end %>
      </tbody>
    </table>

    <%= link_to 'New Dataset', new_dataset_path %>
  </div>
</div>