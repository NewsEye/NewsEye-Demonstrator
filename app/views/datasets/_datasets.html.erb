<div id="datasets_panel" class="panel panel-default">
    <div class="panel-heading" style="display: flex; padding: 3px 15px;">
        <div style="display: inline-block; padding-top:0.5em; padding-bottom:0.5em;">
            <span style="font-weight: bold">Datasets</span> (<%= link_to 'Create a new dataset', new_dataset_path %>)
        </div>
    </div>
  <div class="panel-body flex-grow">
    <table class="table">
      <tbody>
      <% current_user.dataset_ids.each do |dataset_id| %>
        <% dataset = Dataset.find(dataset_id) %>
        <tr>
          <td><%= link_to dataset.title, dataset %></td>
          <td><%= dataset.nb_issues %> issues, <%= dataset.nb_articles %> articles and <%= dataset.nb_compound %> compound articles.</td>
<!--          <td>-->
            <%#= link_to "Describe", "/personal_workspace/describe_dataset/#{dataset.id}", remote: true %>
<!--          </td>-->
          <td>
            <%= link_to "Experiment", "/personal_workspace/investigate_dataset/#{dataset.id}", remote: true, class: "start_experiment_button" %>
          </td>
<!--          <td>-->
            <%#= link_to "/personal_workspace/explore_dataset/#{dataset.id}", method: :delete, data: { confirm: 'Are you sure?' }, remote: true do %>
<!--              <span class="glyphicon glyphicon-search" style="color: black"></span>-->
            <%# end %>
<!--          </td>-->
<!--          <td>-->
            <%#= link_to "TM", "/topic_models/query_modal/dataset/#{dataset.id}", remote: true%>
<!--          </td>-->
          <td>
            <%= link_to dataset, method: :delete, remote: true, data: { confirm: 'Are you sure ? All associated tasks will also be deleted.' } do %>
              <span class="glyphicon glyphicon-remove" style="color: red"></span>
            <% end %>
          </td>
        </tr>
      <% end %>
      </tbody>
    </table>


  </div>
</div>