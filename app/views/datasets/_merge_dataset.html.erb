<div class="modal-body">
  <p>The following changes will be applied to <span><%= @dataset.title %></span></p>
  <h4>Added (<%= @relevancy_changes[:added].size %>):</h4>
  <ul>
    <% @relevancy_changes[:added].each do |doc_id, doc_relevancy| %>
      <li><%= doc_id %> (<strong><%= get_relevancy_text doc_relevancy %></strong>)</li>
    <% end %>
  </ul>
  <h4>Unchanged (<%= @relevancy_changes[:unchanged].size %>):</h4>
  <ul>
    <% @relevancy_changes[:unchanged].each do |doc_id, doc_relevancy| %>
      <li><%= doc_id %> (<strong><%= get_relevancy_text doc_relevancy %></strong>)</li>
    <% end %>
  </ul>
</div>
</div>
<div class="modal-footer">
  <button type="button" class="btn" data-dismiss="modal">Cancel</button>
  <form id="apply_dataset_global_changes" class="form-inline" novalidate="novalidate" data-remote="false" method='post' action="/datasets/apply_merge_dataset">
    <input type="hidden" name="dataset_id" value="<%= @dataset.id %>"/>
    <% @relevancy_changes[:added].each do |doc_id, doc_relevancy| %>
      <input type="hidden" name="relevancy[<%= doc_id %>]" value="<%= doc_relevancy %>"/>
    <% end %>
    <button type="submit" class="btn btn-info" data-disable-with="Working...">Apply changes</button>
  </form>
</div>