
<%= simple_form_for @feedback, html: {id: 'feedback_form', class: 'form-inline'}, remote: true do |f| %>
  <div class="form-group">
    <%= f.label :name, 'Name' %>
    <%= f.text_field :name %>
  </div>
  <div class="form-group">
    <%= f.label :email, 'email' %>
    <%= f.text_field :email %>
  </div>
    <div class="form-group">
    <%= f.label :text, 'Message' %>
    <%= f.text_area :text, size: "60x12" %>
    </div>
  <input type="hidden" id="feedback_page" name="feedback[page]" value="<%= request.protocol+request.host_with_port %>" />
  <%= f.submit "Send" %>
<% end %>
<div id="feedback_messages"></div>