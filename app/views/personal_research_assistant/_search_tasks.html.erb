<form novalidate="novalidate" data-remote="true" action="/personal_research_assistant/search" accept-charset="UTF-8" method="post" id="pra_search_form">
  <%= csrf_meta_tags %>
  <div class="row">
    <div class="col-md-3">
      <label for="search_query">Make a new search:</label>
    </div>
    <div class="form-group col-md-7">
      <input id="search_query" name="query_pra_input" class="form-control" type="text"/>
    </div>
    <div class="form-group col-md-2">
      <button type="submit" class="btn btn-primary" name="submit" value="search_query">Search</button>
    </div>
  </div>
</form>