<div class="row">
  <div class="col-md-3">
    <label for="<%= from %>_search_query">Make a new search:</label>
  </div>
  <div class="form-group col-md-7">
    <input id="<%= from %>_search_query" name="<%= from %>_query_pra_input" class="form-control" type="text"/>
  </div>
  <div class="form-group col-md-2">
    <button type="submit" class="btn btn-primary" name="submit" value="<%= from %>_query"><%= from.capitalize %></button>
  </div>
</div>
<div class="row">
  <div class="col-md-3">
    <label for="<%= from %>_search_task_select">or select an existing search task:</label>
  </div>
  <div class="form-group col-md-7">
    <select id="<%= from %>_search_task_select" name="<%= from %>_search_task_pra_input" class="form-control" autocomplete="off">
      <option value="" disabled selected>Select a search task</option>
      <%= options_for_select(current_user.tasks.where(task_type: 'search').map(&:uuid)) %>
    </select>
  </div>
  <div class="form-group col-md-2">
    <button type="submit" class="btn btn-primary" name="submit" value="<%= from %>_search_task"><%= from.capitalize %></button>
  </div>
</div>
<div class="row">
  <div class="col-md-3">
    <label for="<%= from %>_dataset_pra_select">or select a dataset to process:</label>
  </div>
  <div class="form-group col-md-7">
    <select id="<%= from %>_dataset_pra_select" name="<%= from %>_dataset_pra_select_pra_input" class="form-control" autocomplete="off">
      <option value="" disabled selected>Select your dataset</option>
      <%= options_for_select(current_user.datasets.map(&:title)) %>
    </select>
  </div>
  <div class="form-group col-md-2">
    <button type="submit" class="btn btn-primary" name="submit" value="<%= from %>_dataset"><%= from.capitalize %></button>
  </div>
</div>