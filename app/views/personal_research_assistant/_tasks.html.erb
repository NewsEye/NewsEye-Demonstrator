<div class="panel panel-default">
  <div class="panel-heading">
    Tasks
    <form  style="float: right;" novalidate="novalidate" data-remote="true" action="/update_tasks_status" accept-charset="UTF-8" method="get">
      <%= csrf_meta_tags %>
      <button type="submit" class="btn btn-link"><span class="glyphicon glyphicon-refresh"></span></button>
    </form>
  </div>
  <div class="panel-body">

    <div class="list-group">
      <% Task.where(user: current_user, subtask: false).sort_by { |t| t.started }.reverse.each do |t| %>
        <% case t.task_type %>
        <% when 'investigator', 'investigate' %>
          <% style = t.status == "finished" ? "list-group-item-success" : "list-group-item-warning" %>
          <li class="list-group-item <%= style %>">
            <div style="position: relative">
              <div class="clearfix">
                <span style="float: left">
                  <a class="" id="task_<%= t.uuid %>" data-toggle="collapse" href="#subtasks_<%= t.uuid %>">
                      Started at: <%= t.started %> |
                      Task type: <%= t.task_type %> |
                      uuid: <%= t.uuid %>
                  </a>
                </span>
                <span style="float: right">
                  <%= render partial: 'personal_research_assistant/tasks_actions', locals: {task: t} %>
                </span>
              </div>
            </div>
          </li>
          <div class="collapse list-group-submenu" id="subtasks_<%= t.uuid %>">
            <ul>
              <% t.subtasks.each do |subtask| %>
                <% style = t.status == "finished" ? "list-group-item-success" : "list-group-item-warning" %>
                <li class="list-group-item sub-item <%= style %>" style="padding-left: 30px">
                  <div class="clearfix">
                    <span style="float: left">
                      Started at: <%= subtask.started %> |
                      Task type: <%= subtask.task_type %> |
                      <% if subtask.task_type == 'analysis' %>
                        [<%= subtask.parameters['utility'] %>] |
                      <% end %>
                      uuid: <%= subtask.uuid %>
                    </span>
                    <span style="float: right">
                      <%= render partial: 'personal_research_assistant/tasks_actions', locals: {task: subtask} %>
                    </span>
                  </div>
                </li>
              <% end %>
            </ul>
          </div>

        <% when 'search', 'analysis'%>
          <% style = t.status == "finished" ? "list-group-item-success" : "list-group-item-warning" %>
          <li class="list-group-item <%= style %>">
            <div class="clearfix">
              <span style="float: left">
                Started at: <%= t.started %> |
                Task type: <%= t.task_type %> |
                <% if t.task_type == 'analysis' %>
                  [<%= t.parameters['utility'] %>] |
                <% end %>
                uuid: <%= t.uuid %>
              </span>
              <span style="float:right">
                <%= render partial: 'personal_research_assistant/tasks_actions', locals: {task: t} %>
              </span>
            </div>
          </li>
        <% end %>
      <% end %>
    </div>

  </div>
</div>
