<div class="panel panel-default" id="experiments_panel">
    <div class="panel-heading" style="display: flex">
        <div style="display: inline-block; padding-top:0.5em;">
            <span style="font-weight: bold">Experiments</span> (<a id="new_experiment_link" href="#">Create a new experiment</a>)
        </div>
        <div style="display: inline-block; margin-left: auto;">
            <form id="refresh_experiments_form" class="form-inline" novalidate="novalidate" data-remote="true" action="/personal_workspace/update_experiments" accept-charset="UTF-8" method="get">
                <%= csrf_meta_tags %>
                <button type="submit" class="btn btn-link"><span class="glyphicon glyphicon-refresh"></span></button>
            </form>
        </div>
    </div>
  <div class="panel-body">

    <div class="list-group">

      <% Experiment.where(user: current_user).sort_by { |exp| exp.created_at }.reverse.each do |experiment| %>
        <% style = experiment.description.nil? ? "list-group-item-warning" : "list-group-item-success" %>
        <li class="list-group-item <%= style %>">
          <div class="clearfix">
            <div class="row">
              <div class="col-md-11">
                <div class="row">
                  <div class="col-md-3">
                    <% text = "#{experiment.title}" %>
                    <%= link_to text, "/#{I18n.locale}/experiment/show/#{experiment.id}" %>
                  </div>
                  <div class="col-md-3">
                    <%= "created at #{experiment.created_at}" %>
                  </div>
                  <div class="col-md-3">
                    <%= "updated at #{experiment.updated_at}" %>
                  </div>
                  <div class="col-md-3">
                    <%= "status: #{experiment.get_status}" %>
                  </div>
                </div>
              </div>
              <div class="col-md-1">
                <%= link_to "/personal_workspace/delete_experiment/#{experiment.id}",  {remote: true, 'data-confirm': "Are you sure you want to delete this experiment ?", class: 'btn btn-link'} do %>
                  <span class="glyphicon glyphicon-remove" style="color: red"></span>
                <% end %>
              </div>
            </div>
          </div>
        </li>
      <% end %>

    </div>

  </div>
</div>
