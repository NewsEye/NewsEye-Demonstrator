<% unless current_user.compound_articles.empty? %>
    <div class="card">
        <div class="card-header">
            Compound articles
        </div>
        <div class="card-body">
            <div class="accordion w-100">
                <% current_user.compounds_by_issue.each do |issue_id, compounds_list| %>
                    <div class="accordion-item">
                        <h2 class="accordion-header">
                            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#compounds_for_<%= issue_id %>">
                                <%= issue_id %>
                            </button>
                        </h2>
                        <div id="compounds_for_<%= issue_id %>" class="accordion-collapse collapse">
                            <div class="p-0 accordion-body">
                                <ul class="list-group list-group-flush">
                                    <% compounds_list.each do |compound| %>
                                        <li class="list-group-item">
                                            <a class="ps-5" href="/catalog/<%= compound.issue_id %>?selected_compound=<%= compound.id %>"><%= compound.title %></a>
                                        </li>
                                    <% end %>
                                </ul>
                            </div>
                        </div>
                    </div>
                <% end %>
            </div>
        </div>
    </div>
<% end %>