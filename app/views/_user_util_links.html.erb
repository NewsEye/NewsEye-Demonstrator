<div class="navbar-right">
  <% if has_user_authentication_provider? %>
    <ul class="nav navbar-nav">
      <% if current_user %>
        <li><%= link_to 'Statistics', "/#{I18n.locale}/explore" %></li>
        <li><%= link_to 'Workspace', "/#{I18n.locale}/workspace" %></li>
<!--        <li><%#= link_to 'Personal Research Assistant', "/#{I18n.locale}/personal_research_assistant" %></li>-->
